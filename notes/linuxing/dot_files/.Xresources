Xft.rgba:                   none
Xft.dpi:                    96
Xft.antialias:              1
Xft.hinting:                1
Xft.hintstyle:              hintfull
Xft.lcdfilter:              lcddefault
! XTerm*termName:             xterm-256color
XTerm*termName:             xterm
*utf8:                      1
*border:                    0
*fading:                    25
*iso14755:                  false
URxvt*perl-ext-common:      matcher,clipboard,font-size
URxvt*url-launcher:         /usr/bin/chromium
URxvt*matcher.button:       1
URxvt*keysym.C-V:           perl:clipboard:paste
URxvt*keysym.C-C:           perl:clipboard:copy
URxvt*keysym.C-Up:          perl:font-size:increase
URxvt*keysym.C-Down:        perl:font-size:decrease
URxvt*keysym.C-0:           perl:font-size:reset
URxvt*keysym.Home:          \033[1~
URxvt*keysym.End:           \033[4~

!  - use a bitmap font
!urxvt*font:        -xos4-terminus-medium-*-*-*-12-*-*-*-*-*-*-*
!urxvt*boldFont:    -xos4-terminus-bold-*-*-*-12-*-*-*-*-*-*-*
!  - use xft for drawing fonts
!urxvt*font:       xft:Terminus:8
! URxvt*font:                 xft:Droid Sans Mono for Powerline:size=9
! URxvt*font:                 xft:Terminus:style=Regular:size=15
URxvt*font:                 xft:DejaVuSansMono:pixelsize=14
! ?xft:Monospace:pixelsize=14.5
!  - probably the reason why inconsolata didnt work is coz
!  - it should be called via the bitmat shit style!=!?
! URxvt*font:                 xft:inconsolata:pixelsize=10:antialias=true:hinting=true
! Inconsolata doesnt have bold font (or didnt?). This would solve it:
! URxvt*boldFont:             xft:inconsolata:pixelsize=13

URxvt*letterSpace:          -1

URxvt*depth:                32
URxvt*scrollBar:            False
URxvt*jumpScroll:           False
URxvt*skipScroll:           False
! URxvt*termName:             rxvt-unicode
URxvt*termName:             xterm

URxvt*saveLines:            65535
URxvt*cursorBlink:          True

! Visual bell is rather terrible (less so than aural bell :O )
! URxvt*visualBell:           True

! These fixed CTRL+right and left at least in terminal:
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C


URxvt.perl-lib: /home/$USERNAME/scripts_term/


*.foreground:   #c2c2b0
! Add some transparency too - but not like this after all
! URxvt.background: [95]#111111
URxvt.background: #111111
URxvt*.transparent: true
! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
URxvt*.shading: 50



